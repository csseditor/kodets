- provide :title, 'All Courses'

.container
  = render 'shared/breadcrumbs'

  - if current_user.teacher?
    .pull-right
      = link_to 'New Course', new_course_path, class: 'btn btn-primary'

  %h1 All Courses

  .row
    - @courses.each do |course|
      .col-md-4
        .panel.panel-default
          .panel-heading
            - if current_user.teacher?
              .pull-right
                = link_to edit_course_path(course) do
                  %span.edit-course{"data-toggle" => "tooltip", "data-placement" => "top", "title" => "Edit Course"}
                    %i.fa.fa-pencil

            = link_to course.name, course
          .panel-body
            = course.description
          .panel-footer
            .center
              = link_to 'View Course', course
