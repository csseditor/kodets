#info
  .container
    .row
      .col-md-12
        - if current_org.users.count < (current_org.max_users * 0.1).to_i
          .alert.alert-info.alert-dismissible{role: "alert"}
            %button.close{type: "button", "data-dismiss" => "alert"}
              %span{"aria-hidden" => "true"} &times;
              %span.sr-only Close
            You don't seem to have many users,
            = link_to 'click here to add users.', add_students_path, class: 'alert-link'
        %h1 #{current_org.name} Dashboard
    .row.stats
      .col-sm-4
        - users = pluralise(current_org.users.count, 'user')
        = link_to users_path do
          %strong= users.first
          = users.last
          in your organisation
      .col-sm-4
        - courses = pluralise(current_org.courses.count, 'course')
        = link_to courses_path do
          %strong= courses.first
          = courses.last
      .col-sm-4
        %strong #{'3'}
        homework overdue
