%header{class: header_class, role: "banner"}
  .container
    .navbar-header
      %button.navbar-toggle{"data-target" => ".bs-navbar-collapse", "data-toggle" => "collapse", type: "button"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to 'Kodets', root_path, class: 'navbar-brand'
    %nav.collapse.navbar-collapse.bs-navbar-collapse{role: "navigation"}
      %ul.nav.navbar-nav.navbar-right
        %li= link_to 'Home', root_path
        %li= link_to 'Pricing', pricing_path
        - if teacher_signed_in?
          %li.dropdown
            %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
              = current_teacher.email
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Account settings', edit_teacher_registration_path
              %li= link_to 'Sign out', destroy_teacher_session_path, method: :delete
        - else
          %li= link_to 'Sign in', new_teacher_session_path
