%ol.breadcrumb
  - if on_page 'courses', 'index'
    %li.active Courses
  - elsif on_page 'courses', 'show'
    %li= link_to 'Courses', courses_path
    %li.active= @course.name
  - elsif on_page 'tracks', 'show'
    %li= link_to 'Courses', courses_path
    %li= link_to @track.course.name, course_path(@track.course)
    %li.active
      = @track.name
  - elsif on_page('code_lessons', 'edit') || on_page('code_lessons', 'update')
    %li= link_to 'Courses', courses_path
    %li= link_to @track.course.name, course_path(@track.course)
    %li= link_to @track.name, track_path(@track)
    %li= link_to @code_lesson.name, @code_lesson
    %li.active Edit
