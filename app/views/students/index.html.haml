- provide :title, 'All Students'

#info
  .row
    .col-md-12
      %table#students_index.display
        %thead
          %tr
            %th Name
            %th Email
            %th Username
            %th Actions
        %tbody
        - @students.each do |user|
          %tr
            %td= user.name
            %td= user.email
            %td= user.username
            %td
              = link_to 'Delete', destroy_student_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user?" }
              \-
              = link_to 'Edit', edit_student_path(user)
