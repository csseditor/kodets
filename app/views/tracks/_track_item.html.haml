%li.list-group-item
  = link_to item, class: 'black-icon' do
    %span.octicon.octicon-terminal
    = item.name
  - if !item.visible? && current_user.teacher?
    %span.text-danger{"class" => "visible-tooltip visible-tooltip-#{index}", "data-toggle" => "tooltip", "data-placement" => "top", "title" => "You need to add #{required_empty_fields(item)}."}
      %span.octicon.octicon-alert
      This item is not visible to students
  - if current_user.teacher?
    .pull-right.code-lesson-options
      = link_to edit_code_lesson_path(item), class: 'black-icon' do
        %span.octicon.octicon-pencil
        Edit
      = link_to code_lesson_stats_path(item), class: 'black-icon' do
        %span.octicon.octicon-file-text
        Show Stats
