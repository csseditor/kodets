- provide :title, @track.name

.container
  = render 'shared/breadcrumbs'

  - if current_user.teacher?
    .pull-right
      = link_to 'Edit Track', edit_track_path(@track), class: 'btn btn-primary'

      .btn-group
        %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
          New Lesson
          %span.caret
        %ul.dropdown-menu{:role => "menu"}
          %li= link_to 'New Code Lesson', '#', 'data-toggle' => 'modal', 'data-target' => '#new_code_lesson_modal'
          %li= link_to 'New Video Lesson', '#'
          %li= link_to 'New Tutorial', '#'

  %h1= @track.name


  %ul.list-group
    - @track.items.each do |item|
      = render 'tracks/track_item', item: item

- if current_user.teacher?
  = render 'tracks/modal/new_code_lesson_modal'
