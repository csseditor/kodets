#!/usr/bin/env bash

set -e

if [ "$1" == "bi" ]; then
  echo "===> Bundling..."
  bin/bundle --quiet
else
  echo "===> Skipping bundling..."
fi

echo "===> Running specs..."
bin/rspec

if [ "$1" == "rc" ]; then
  echo "===> Running Rubocop..."
  bundle exec rubocop -R -f emacs
else
  echo "===> Skipping Rubocop..."
fi
